<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_400"
    tools:context=".DetailKegiatanActivity">

    <include
        android:id="@+id/rt_bar"
        layout="@layout/toolbar_detailkegiatan"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/rt_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Image Banner -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner_kegiatan"
                android:scaleType="centerCrop" />

            <!-- Bagian Pertama -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bagian_pertama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dd_jeniskegiatan"
                        style="@style/Heading3"
                        android:textColor="@color/neutral_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="@string/recom_activity"
                        style="@style/BodySmallRegular"
                        android:textColor="@color/neutral_500" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bagian Kedua -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bagian_kedua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_umum"
                        style="@style/Heading3"
                        android:textColor="@color/neutral_600" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Durasi kegiatan:"
                                style="@style/BodySmallRegular"
                                android:textColor="@color/neutral_500" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Nilai dari API"
                                style="@style/BodySmallRegular"
                                android:textColor="@color/neutral_600" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Lokasi Kegiatan:"
                                style="@style/BodySmallRegular"
                                android:textColor="@color/neutral_500" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Nilai dari API"
                                style="@style/BodySmallRegular"
                                android:textColor="@color/neutral_600" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Penyelenggara:"
                                style="@style/BodySmallRegular"
                                android:textColor="@color/neutral_500" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Nilai dari API"
                                style="@style/BodySmallRegular"
                                android:textColor="@color/neutral_600" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tanggal Pendaftaran:"
                                style="@style/BodySmallRegular"
                                android:textColor="@color/neutral_500" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Nilai dari API"
                                style="@style/BodySmallRegular"
                                android:textColor="@color/neutral_600" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bagian Ketiga -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bagian_ketiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deskripsi_keg"
                        style="@style/Heading3"
                        android:textColor="@color/neutral_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/isi_deskripsi_kegiatan"
                        style="@style/BodySmallRegular"
                        android:textColor="@color/neutral_600"
                        android:justificationMode="inter_word" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bagian Keempat -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bagian_keempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/persyaratan_keg"
                        style="@style/Heading3"
                        android:textColor="@color/neutral_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/isi_persyaratan_kegiatan"
                        style="@style/BodySmallRegular"
                        android:textColor="@color/neutral_600"
                        android:justificationMode="inter_word" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bagian Kelima -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bagian_kelima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skill_keg"
                        style="@style/Heading3"
                        android:textColor="@color/neutral_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/daftar_skill"
                        style="@style/BodySmallRegular"
                        android:textColor="@color/neutral_600" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
