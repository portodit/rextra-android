<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.portofolio.PortofolioFragment">

    <!-- Include Toolbar -->
    <include
        android:id="@+id/rt_bar"
        layout="@layout/toolbar_portofolio"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView untuk Tahap Pengembangan -->
    <ImageView
        android:id="@+id/iv_development_stage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rt_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/tahap_pengembangan" />

    <!-- TextView untuk Judul -->
    <TextView
        android:id="@+id/tv_development_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tahap_pengembangan"
        android:textColor="@color/neutral_600"
        style="@style/Heading5"
        app:layout_constraintTop_toBottomOf="@id/iv_development_stage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView untuk Deskripsi -->
    <TextView
        android:id="@+id/tv_development_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/deskripsi_pengembangan_portofolio"
        android:textColor="@color/neutral_500"
        style="@style/BodySmallRegular"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_development_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
